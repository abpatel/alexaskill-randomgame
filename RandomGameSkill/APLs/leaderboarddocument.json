{
  "type": "APL",
  "version": "1.9",
  "theme": "dark",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.5.0"
    },
    {
      "name": "alexa-styles",
      "version": "1.4.0"
    }
  ],
  "mainTemplate": {
    "parameters": [
      "listData"
    ],
    "items": [
      {
        "type": "AlexaLists",
        "headerTitle": "LeaderBoard",
        "headerSubtitle": "${listData.headerSubtitle}",
        "headerAttributionImage": "${listData.headerAttributionImage}",
        "backgroundImageSource": "${listData.backgroundImageSource}",
        "backgroundColorOverlay": true,
        "footerHintText": "Say 'New game' to start",
        "defaultImageSource": "${listData.defaultImageSource}",
        "listItems": "${listData.listItemsToShow}",
        "emptyPrimaryText": "Leaderboard is empty",
        "emptySecondaryText": "${listData.emptySecondaryText}",
        "imageBlurredBackground": true
      }
    ]
  }
}