{
  "type": "APL",
  "version": "1.8",
  "license": "Copyright 2021 Amazon.com, Inc. or its affiliates. All Rights Reserved.\nSPDX-License-Identifier: LicenseRef-.amazon.com.-AmznSL-1.0\nLicensed under the Amazon Software License  http://aws.amazon.com/asl/",
  "settings": {},
  "theme": "dark",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.1.0"
    }
  ],
  "resources": [],
  "styles": {
    "smallText": {
      "values": [
        {
          "fontSize": "50dp",
          "color": "white",
          "textAlign": "center"
        }
      ]
    },
    "mediumText": {
      "values": [
        {
          "fontSize": "80dp",
          "color": "white",
          "textAlign": "center"
        }
      ]
    },
    "largeText": {
      "values": [
        {
          "fontSize": "120dp",
          "color": "white",
          "textAlign": "center"
        }
      ]
    },
    "XLargeText": {
      "values": [
        {
          "fontSize": "100dp",
          "color": "white",
          "textAlign": "center"
        }
      ]
    },
    "bigText": {
      "values": [
        {
          "fontSize": "72dp",
          "color": "white",
          "textAlign": "center"
        }
      ]
    }
  },
  "onMount": [],
  "graphics": {},
  "commands": {},
  "layouts": {
    "numberGameText": {
      "description": "A basic text layout with start, middle and end. Ids to target each individual layout (for commands) will be textTop, textMiddle, and textBottom, respectively.",
      "parameters": [
        {
          "name": "startText",
          "type": "string"
        },
        {
          "name": "middleText",
          "type": "string"
        },
        {
          "name": "endText",
          "type": "string"
        },
        {
          "name": "styleName",
          "type": "string"
        },
        {
          "name": "topId",
          "type": "string",
          "default": "textTop"
        },
        {
          "name": "middleId",
          "type": "string",
          "default": "textMiddle"
        },
        {
          "name": "bottomId",
          "type": "string",
          "default": "textBottom"
        }
      ],
      "items": [
        {
          "type": "Container",
          "items": [
            {
              "type": "Text",
              "style": "${styleName}",
              "paddingTop": "${@viewportProfile == @hubRoundSmall ? 75dp : 0dp}",
              "text": "${startText}",
              "id": "${topId}"
            },
            {
              "type": "Text",
              "style": "${styleName}",
              "text": "${middleText}",
              "id": "${middleId}"
            },
            {
              "type": "Text",
              "style": "${styleName}",
              "text": "${endText}",
              "id": "${bottomId}"
            }
          ]
        }
      ]
    }
  },
  "mainTemplate": {
    "parameters": [
      "textToSet"
    ],
    "items": [
      {
        "type": "Container",
        "items": [
          {
            "type": "numberGameText",
            "startText": "${textToSet.start}",
            "middleText": "${textToSet.middle}",
            "endText": "${textToSet.end}",
            "styleName": "bigText"
          }
        ],
        "width": "200vh",
        "paddingTop": "70dp",
        "when": "${@viewportProfile == @hubLandscapeSmall}"
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "numberGameText",
            "startText": "${textToSet.start}",
            "middleText": "${textToSet.middle}",
            "endText": "${textToSet.end}",
            "styleName": "mediumText"
          }
        ],
        "width": "170vh",
        "paddingTop": "150dp",
        "when": "${@viewportProfile == @hubLandscapeMedium}"
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "numberGameText",
            "startText": "${textToSet.start}",
            "middleText": "${textToSet.middle}",
            "endText": "${textToSet.end}",
            "styleName": "largeText"
          }
        ],
        "width": "170vh",
        "height": "200vh",
        "paddingTop": "150dp",
        "when": "${@viewportProfile == @hubLandscapeLarge}"
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "numberGameText",
            "startText": "${textToSet.start}",
            "middleText": "${textToSet.middle}",
            "endText": "${textToSet.end}",
            "styleName": "XLargeText"
          }
        ],
        "width": "170vh",
        "paddingTop": "150dp",
        "when": "${@viewportProfile == @hubLandscapeXLarge}"
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "numberGameText",
            "startText": "${textToSet.start}",
            "middleText": "${textToSet.middle}",
            "endText": "${textToSet.end}",
            "styleName": "smallText"
          }
        ],
        "when": "${@viewportProfile == @hubPortraitMedium}"
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "numberGameText",
            "startText": "${textToSet.start}",
            "middleText": "${textToSet.middle}",
            "endText": "${textToSet.end}",
            "styleName": "XLargeText"
          }
        ],
        "width": "170vh",
        "height": "200vh",
        "paddingTop": "50dp",
        "when": "${@viewportProfile == @tvLandscapeXLarge}"
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "numberGameText",
            "startText": "${textToSet.start}",
            "middleText": "${textToSet.middle}",
            "endText": "${textToSet.end}",
            "styleName": "smallText"
          }
        ],
        "when": "${@viewportProfile == @mobileSmall}"
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "numberGameText",
            "startText": "${textToSet.start}",
            "middleText": "${textToSet.middle}",
            "endText": "${textToSet.end}",
            "styleName": "bigText"
          }
        ],
        "height": "100%",
        "width": "100%",
        "when": "${@viewportProfile == @hubRoundSmall}"
      }
    ]
  }
}